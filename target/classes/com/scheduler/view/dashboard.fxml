<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="650.0" minWidth="1400.0" prefHeight="715.0" prefWidth="1400.0"
    spacing="25.0" style="-fx-background-color: #FE9900;" xmlns="http://javafx.com/javafx/25"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.scheduler.controller.MainController">

    <Label alignment="CENTER" prefHeight="40.0" prefWidth="321.0"
        style="-fx-font-size: 18px; -fx-font-weight: bold;"
        text="Sistem Penjadwalan Tugas Mahasiswa">
        <padding>
            <Insets bottom="25.0" />
        </padding>
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="10">
        <VBox spacing="5">
            <Label text="Nama Tugas:" />
            <TextField fx:id="txtNama" promptText="Masukkan nama tugas" />
            <Label text="Deskripsi:" />
            <TextArea fx:id="txtDeskripsi" prefHeight="50" />
            <Label text="Tenggat Waktu:" />
            <DatePicker fx:id="dpTenggat" />
            <Button maxWidth="Infinity" onAction="#handleTambah" text="Tambah Tugas" />
            <Button maxWidth="Infinity" onAction="#handleHapus"
                style="-fx-background-color: #DC143C;" text="Hapus Terpilih" textFill="WHITE" />
            <Button maxWidth="Infinity" onAction="#handleStatus"
                style="-fx-background-color: #228B22;" text="Selesai" textFill="WHITE" />
        </VBox>

        <VBox>
            <HBox spacing="5">
                <ChoiceBox fx:id="kelompok" prefWidth="150.0" />
                <Button onAction="#handleKelompok"
                    style="-fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                    text="+">
                </Button>
                <VBox.margin>
                    <Insets bottom="5.0" />
                </VBox.margin>
            </HBox>
            <TableView fx:id="tableTugas" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNama" prefWidth="150" text="Nama Tugas" />
                    <TableColumn fx:id="colDeskripsi" prefWidth="300" text="Deskripsi" />
                    <TableColumn fx:id="colTenggat" prefWidth="100" text="Deadline" />
                    <TableColumn fx:id="colStatus" prefWidth="120" text="Status" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

        <VBox>
            <Label text="ID Kelompok:">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <TextField fx:id="tfCurrentId" editable="false" prefWidth="373.0"
                style="-fx-background-color: #e0e0e0;" text="-">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <TableView fx:id="tableAnggota" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colAnggotaId" prefWidth="120" text="ID User" />
                    <TableColumn fx:id="colAnggotaNama" prefWidth="150" text="Nama" />
                    <TableColumn fx:id="colAnggotaStatus" prefWidth="100" text="Status" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <VBox alignment="CENTER" spacing="10.0">
                <children>
                    <Button maxWidth="1.7976931348623157E308" onAction="#hapusAnggota"
                        style="-fx-background-color: #DC143C;" text="Keluarkan" textFill="WHITE" />
                    <Button maxWidth="1.7976931348623157E308" onAction="#handleHapusKelompok"
                        style="-fx-background-color: black;" text="Hapus Kelompok" textFill="WHITE" />
                </children>
                <padding>
                    <Insets bottom="10.0" top="10.0" />
                </padding>
            </VBox>
        </VBox>
    </HBox>
    <padding>
        <Insets bottom="10.0" top="10.0" />
    </padding>
</VBox>